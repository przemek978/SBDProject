@page
@model LoginModel
<div>
	@Model.Message
</div>

<div class="mt-5" style="margin: auto; width: 50%; height: 55vh; padding: 1%; padding-top: 4%; border: 1px solid white; border-radius: 25px; ">
    <center><h1>Zaloguj się</h1></center>

    <div style="margin: auto; width: 100%; padding-top: 12%;">
        <form class="form-horizontal" method="post">
            <div class="" style="margin: auto; width: 40%;">
                <label asp-for="user.nazwa_uzytkownika" class="control-label"></label>
                <div class="mt-2">
                    <input asp-for="user.nazwa_uzytkownika" class="form-control">
                </div>
            </div>
            <div class="form-group mt-2" style="margin: auto; width: 40%;">
                <label asp-for="user.haslo" class="control-label col-sm2"></label>
                <div class="mt-2">
                    <input asp-for="user.haslo" class="form-control">
                </div>
            </div>
            <div class="mt-5 mb-5" style="margin: auto; width: 25%; ">
                <button class="form-control button button4" style="line-height: 50%;">Zatwierdź</button>
            </div>

        </form>
    </div>
</div>