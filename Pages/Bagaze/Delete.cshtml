@page
@model SBD.Pages.Bagaze.DeleteModel

@{
    ViewData["Title"] = "Usuń bagaż";
}

<h1>Usuń bagaż</h1>

<h3>Czy napewno chcesz usunać bagaż?</h3>
<div>
    <h4>Bagaz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bagaz.waga)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bagaz.waga) kg
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Bagaz.id_bagazu" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót do listy</a>
    </form>
</div>
