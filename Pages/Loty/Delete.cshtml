@page
@model SBD.Pages.Loty.DeleteModel

@{
    ViewData["Title"] = "Usuń lot";
}

<h1>Usuń lot</h1>

<h3>Czy napewno chcesz usunąć lot?</h3>
<div>
    <h4>Lot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Samolot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Samolot.model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Lotnisko)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Lotnisko.nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Lotnisko_Koncowe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Lotnisko_Koncowe.nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Kapitan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Kapitan.imie)
            @Html.DisplayFor(model => model.Lot.Kapitan.nazwisko)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Oficer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Oficer.imie)
            @Html.DisplayFor(model => model.Lot.Oficer.nazwisko)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Lot.id_lotu" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
        <a asp-page="./Index">Powrót do listy</a>
    </form>
</div>
