@page
@model SBD.Pages.Samoloty.CreateModel

@{
    ViewData["Title"] = "Dodaj samolot";
}

<h1>Dodaj samolot</h1>

<h4>Samolot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Samolot.model" class="control-label"></label>
                <input asp-for="Samolot.model" class="form-control" />
                <span asp-validation-for="Samolot.model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Samolot.typ" class="control-label"></label>
                <input asp-for="Samolot.typ" class="form-control" />
                <span asp-validation-for="Samolot.typ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Samolot.ilosc_miejsc" class="control-label"></label>
                <input asp-for="Samolot.ilosc_miejsc" class="form-control" />
                <span asp-validation-for="Samolot.ilosc_miejsc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Samolot.kod_linii" class="control-label"></label>
                <select asp-for="Samolot.kod_linii" class="form-control" asp-items="ViewBag.kod_linii">
                    <option disabled selected>----</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn button button4" value="Dodaj"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn button button4" asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
