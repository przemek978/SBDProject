@page
@model SBD.Pages.LinieLotnicze.EditModel

@{
    ViewData["Title"] = "Edytuj linię lotniczą";
}

<h1>Edytuj linię lotniczą</h1>

<h4>Linia lotnicza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LiniaLotnicza.kod" />
            <div class="form-group">
                <label asp-for="LiniaLotnicza.nazwa" class="control-label"></label>
                <input asp-for="LiniaLotnicza.nazwa" class="form-control" />
                <span asp-validation-for="LiniaLotnicza.nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn button button4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn button button4" asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
