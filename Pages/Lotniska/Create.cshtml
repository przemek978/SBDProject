@page
@model SBD.Pages.Lotniska.CreateModel

@{
    ViewData["Title"] = "Dodaj lotnisko";
}

<h1>Dodaj lotnisko</h1>

<h4>Lotnisko</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lotnisko.ilosc_miejsc" class="control-label"></label>
                <input asp-for="Lotnisko.ilosc_miejsc" class="form-control" />
                <span asp-validation-for="Lotnisko.ilosc_miejsc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lotnisko.lokalizacja" class="control-label"></label>
                <input asp-for="Lotnisko.lokalizacja" class="form-control" />
                <span asp-validation-for="Lotnisko.lokalizacja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lotnisko.nazwa" class="control-label"></label>
                <input asp-for="Lotnisko.nazwa" class="form-control" />
                <span asp-validation-for="Lotnisko.nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
