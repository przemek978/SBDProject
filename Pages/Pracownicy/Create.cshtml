@page
@model SBD.Pages.Pracownicy.CreateModel

@{
    ViewData["Title"] = "Dodaj Pracownika";
}

<h1>Dodaj pracownika</h1>

<h4>Pracownik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pracownik.id_lotniska" class="control-label"></label>
                <select asp-for="Pracownik.id_lotniska" class ="form-control" asp-items="ViewBag.id_lotniska"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik.imie" class="control-label"></label>
                <input asp-for="Pracownik.imie" class="form-control" />
                <span asp-validation-for="Pracownik.imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik.nazwisko" class="control-label"></label>
                <input asp-for="Pracownik.nazwisko" class="form-control" />
                <span asp-validation-for="Pracownik.nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik.stanowisko" class="control-label"></label>
                <input asp-for="Pracownik.stanowisko" class="form-control" />
                <span asp-validation-for="Pracownik.stanowisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik.nazwa_uzytkownika" class="control-label"></label>
                <input asp-for="Pracownik.nazwa_uzytkownika" class="form-control" />
                <span asp-validation-for="Pracownik.nazwa_uzytkownika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik.haslo" class="control-label"></label>
                <input asp-for="Pracownik.haslo" class="form-control" />
                <span asp-validation-for="Pracownik.haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn button button4" value="Dodaj"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn button button4" asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
