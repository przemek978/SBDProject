@page
@model SBD.Pages.Piloci.CreateModel

@{
    ViewData["Title"] = "Dodaj pilota";
}

<h1>Dodaj pilota</h1>

<h4>Pilot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pilot.imie" class="control-label"></label>
                <input asp-for="Pilot.imie" class="form-control" />
                <span asp-validation-for="Pilot.imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pilot.nazwisko" class="control-label"></label>
                <input asp-for="Pilot.nazwisko" class="form-control" />
                <span asp-validation-for="Pilot.nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pilot.kod_linii" class="control-label"></label>
                <select asp-for="Pilot.kod_linii" class ="form-control" asp-items="ViewBag.kod_linii"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn button button4" asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
