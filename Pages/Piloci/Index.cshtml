@page
@model SBD.Pages.Piloci.IndexModel

@{
    ViewData["Title"] = "Piloci";
}

<h1>Piloci</h1>

<p>
    <a class="btn button button4" asp-page="Create" class="btn button button1">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pilot[0].imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pilot[0].nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pilot[0].linia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pilot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.linia.kod)
            </td>
            <td>
                <a class="btn button button4" asp-page="./Edit" asp-route-id="@item.id_pilota">Edytuj</a> |
                <a class="btn button button4" asp-page="./Details" asp-route-id="@item.id_pilota">Szczegóły</a> |
                <a class="btn button button4" asp-page="./Delete" asp-route-id="@item.id_pilota">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
