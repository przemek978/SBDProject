@{
    var paget = "/Login/Login";
    var text = "Zaloguj";
    var HI = "";
    var footlog = "";
    if (Context.Request.Cookies["UserLoginCookie"] != null)
    {
        paget = "/Login/Logout";
        text = "Wyloguj";
        HI = "WITAJ " + User.Identity.Name;
        footlog = "Zalogowany jako " + @User.Identity.Name;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airport</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    
</head>
<body>
    <header>
        <nav style="background-color: #021830!important" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color: white!important" asp-area="" asp-page="/Index">Lotnisko</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" >
                        @if(User.IsInRole("Administrator")){
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Licencje/Index">Licencje</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/LinieLotnicze/Index">Linie Lotnicze</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Lotniska/Index">Lotniska</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Loty/Index">Loty</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Piloci/Index">Piloci</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Pracownicy/Index">Pracownicy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Samoloty/Index">Samoloty</a>
                            </li>
                        }
                        @if(Context.Request.Cookies["UserLoginCookie"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Bagaze/Index">Bagaze</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Bilety/Index">Bilety</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Pasazerowie/Index">Pasazerowie</a>
                            </li>
                        }
                    </ul>
                </div>
                <a style=" color: white !important;float: right;" class="nav-link text-dark log" asp-area="" asp-page="/Users/Profile">@HI</a>
                <a style=" color: white !important;float: right;" class="nav-link text-dark log" asp-area="" asp-page=@paget> @text</a>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Airport  - Przemysław Kuczyński, Rafał Kurzyna, Marcin Kaczanowski, Kamil Karwowski <a asp-area="" asp-page="login">Zaloguj się</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
