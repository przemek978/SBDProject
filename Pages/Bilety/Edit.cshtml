@page
@model SBD.Pages.Bilety.EditModel

@{
    ViewData["Title"] = "Edytuj bilet";
}

<h1>Edytuj bilet</h1>

<h4>Bilet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bilet.id_biletu" />
            <div class="form-group">
                <label asp-for="Bilet.id_pasazera" class="control-label"></label>
                <select asp-for="Bilet.id_pasazera" class="form-control" asp-items="ViewBag.id_pasazera"></select>
                <span asp-validation-for="Bilet.id_pasazera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.nr_miejsca" class="control-label"></label>
                <input asp-for="Bilet.nr_miejsca" class="form-control" />
                <span asp-validation-for="Bilet.nr_miejsca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.id_lotu" class="control-label"></label>
                <select asp-for="Bilet.id_lotu" class="form-control" asp-items="ViewBag.id_lotu"></select>
                <span asp-validation-for="Bilet.id_lotu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.id_bagazu" class="control-label"></label>
                <select asp-for="Bilet.id_bagazu" class="form-control" asp-items="ViewBag.id_bagazu"></select>
                <span asp-validation-for="Bilet.id_bagazu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
