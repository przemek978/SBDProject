@page
@model SBD.Pages.Bilety.DeleteModel

@{
    ViewData["Title"] = "Usuń bilet";
}

<h1>Usuń bilet</h1>

<h3>Czy napewno chcesz usunąć bilet?</h3>
<div>
    <h4>Bilet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bilet.Pasazer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bilet.Pasazer.id_pasazera)
            @Html.DisplayFor(model => model.Bilet.Pasazer.imie)
            @Html.DisplayFor(model => model.Bilet.Pasazer.nazwisko)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bilet.nr_miejsca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bilet.nr_miejsca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bilet.Lot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bilet.Lot.Lotnisko.lokalizacja)
            -> 
            @Html.DisplayFor(model => model.Bilet.Lot.Lotnisko_Koncowe.lokalizacja)
            Czas: 
            @Html.DisplayFor(model => model.Bilet.Lot.data)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bilet.Bagaz)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bilet.Bagaz.id_bagazu)
            -
            @Html.DisplayFor(model => model.Bilet.Bagaz.waga)
            kg
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Bilet.id_biletu" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn button button4" asp-page="./Index">Powrót do listy</a>
    </form>
</div>
